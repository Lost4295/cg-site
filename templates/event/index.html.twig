{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}
    {% block additionnal_stylesheets %}
        <style>
            .badge-success {
                background: #28a745 !important;
                color: white;
            }

            .badge-danger {
                background: #dc3545 !important;
                color: white;
            }
        </style>
    {% endblock %}
{% block body %}
    <div class="container-fluid my-3">

        <h1 class="mb-3">Liste des événements</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Date</th>
                <th>Image</th>
                <th>Votre participation</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description | striptags| slice(0,40) ~ "..." }}</td>
                    <td>{{ event.date ?  "Le " ~ event.date|format_datetime('long', 'short', locale:'fr', timezone:'Europe/Paris'): '' }}</td>
                    <td><img src="{{ asset("img/"~event.image) }}" width="250"
                             alt="Image de l'événement {{ event.name }}"/></td>
                    <td>
                        {% if app.user %}
                            {% if event.isUserRegistered(app.user) %}
                                <span class="badge badge-success">
                                   Inscrit
                               </span>
                            {% else %}
                                <span class="badge badge-danger">
                                    Non inscrit
                                </span>
                            {% endif %}
                        {% else %}
                            Connectez-vous pour voir votre participation.
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-info">Afficher </a>
                        {% if app.user %}
                            <a href="{{ path('event_toogle', {'id': event.id}) }}" class="btn btn-secondary">Changer
                                l'inscription</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


