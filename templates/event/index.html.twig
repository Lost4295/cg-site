{% extends 'base.html.twig' %}

{% block title %}Liste des √©v√©nements{% endblock %}
    {% block additionnal_stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/events-table.css') }}">
    {% endblock %}
{% block body %}
    <div class="container-fluid events-container">
        <div class="events-header">
            <h1>üéÆ Nos √âv√©nements</h1>
            <p>D√©couvrez tous les √©v√©nements √† venir et pass√©s de Couch Gaming</p>
        </div>

        <div class="events-table-container">
            <table class="events-table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Image</th>
                    <th>Participation</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>
                            <span class="event-name">{{ event.name }}</span>
                        </td>
                        <td>
                            <span class="event-description">{{ event.description | striptags | slice(0,40) ~ "..." }}</span>
                        </td>
                        <td>
                            <span class="event-date">{{ event.date ? event.date|format_datetime('long', 'short', locale:'fr', timezone:'Europe/Paris') : 'Date √† venir' }}</span>
                        </td>
                        <td>
                            <div class="event-image-wrapper">
                                <img src="{{ asset("img/"~event.image) }}" class="event-image" alt="Image de l'√©v√©nement {{ event.name }}"/>
                            </div>
                        </td>
                        <td>
                            {% if app.user %}
                                {% if event.isUserRegistered(app.user) %}
                                    <span class="badge badge-success">Inscrit</span>
                                {% else %}
                                    <span class="badge badge-danger">Non inscrit</span>
                                {% endif %}
                            {% else %}
                                <span class="participation-info">Connectez-vous pour voir</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="actions-cell">
                                <a href="{{ path('event_show', {'id': event.id}) }}" class="btn-event-view">
                                    üëÅÔ∏è Voir
                                </a>
                                {% if app.user %}
                                    <a href="{{ path('event_toogle', {'id': event.id}) }}" class="btn-event-toggle">
                                        üîÑ Inscription
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <div class="empty-state-icon">üì≠</div>
                                <p class="empty-state-text">Aucun √©v√©nement disponible pour le moment</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


