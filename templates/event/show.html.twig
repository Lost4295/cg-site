{% endblock %}

{% block body %}
    <div class="container event-show-container">
        
        <!-- Hero Section with Image -->
        <div class="event-hero">
            <img src="{{ asset('img/'~event.image) }}" 
                 alt="Image de l'√©v√©nement {{ event.name }}" 
                 class="event-hero-image"/>
            <div class="event-hero-overlay">
                <h1 class="event-hero-title">üéÆ {{ event.name }}</h1>
                {% if event.date %}
                    <span class="event-hero-date">
                        {{ event.date|format_datetime('long', 'short', locale:'fr', timezone:'Europe/Paris') }}
                    </span>
                {% endif %}
            </div>
        </div>

        <!-- Event Info Grid -->
        <div class="event-info-grid">
            <div class="event-info-item">
                <div class="event-info-icon">üÜî</div>
                <div class="event-info-content">
                    <div class="event-info-label">Identifiant</div>
                    <div class="event-info-value">#{{ event.id }}</div>
                </div>
            </div>
            <div class="event-info-item">
                <div class="event-info-icon">üìÖ</div>
                <div class="event-info-content">
                    <div class="event-info-label">Date</div>
                    <div class="event-info-value">
                        {{ event.date ? event.date|format_datetime('long', 'short', locale:'fr', timezone:'Europe/Paris') : '√Ä d√©terminer' }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Description Card -->
        <div class="event-content-card">
            <div class="event-content-header">
                <span class="event-content-header-icon">üìù</span>
                <h2 class="event-content-header-title">Description de l'√©v√©nement</h2>
            </div>
            <div class="event-content-body">
                {{ event.description|raw }}
            </div>
        </div>

        <!-- Registration Section -->
        <div class="event-registration">
            <h3 class="event-registration-title">Inscription √† l'√©v√©nement</h3>
            {% if app.user %}
                {{ form(form) }}
            {% else %}
                <form action="{{ path('oauth_discord') }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('discord-auth') }}"/>
                    <div class="event-guest-badge">
                        <span>Pour vous inscrire √† l'√©v√©nement, veuillez vous</span>
                        <button type="submit" class="btn-link btn">inscrire √† l'association</button>
                        <span>, ou vous</span>
                        <a href="{{ path('app_login') }}">connecter</a>
                        <span>au site.</span>
                    </div>
                </form>
            {% endif %}
        </div>

        <!-- Back Button -->
        <div class="event-actions">
            <a href="{{ path('event_index') }}" class="btn-back">Retour √† la liste</a>
        </div>
    </div>
{% endblock %}

{% block additionnal_javascripts %}
    <script>
        const span = document.createElement('span');
        span.id = 'loading-spinner';
        span.className = 'spinner-border spinner-border-sm ms-2';
        span.setAttribute('role', 'status');
        span.setAttribute('aria-hidden', 'true');
        span.style.display = 'none';

        document.addEventListener('DOMContentLoaded', function () {
            const input = document.querySelector('input[name="am_i_registered[going]"]');
            input.addEventListener('change', function (event) {
                event.preventDefault();
                input.parentElement.appendChild(span);
                span.style.display = 'inline-block';
                fetch(event.target.form.action, {
                    method: 'GET',
                }).then(response => {
                    if (response.ok) {
                        return true;
                    } else {
                        throw new Error('Network response was not ok');
                    }
                }).then(data => {
                    alert("La valeur a √©t√© mise √† jour avec succ√®s.");
                }).catch(error => {
                    console.error('There was a problem with the fetch operation:', error);
                }).finally(() => {
                    span.style.display = 'none';
                });
            });
        });

    </script>
{% endblock %}
