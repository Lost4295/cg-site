        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .content-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .content-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .content-card:nth-child(3) {
