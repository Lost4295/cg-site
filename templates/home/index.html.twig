            }

            .hero-logo-inner {
                width: 100px;
                height: 100px;
                font-size: 2rem;
            }

            .content-card {
                padding: 1.5rem;
            }

            .section-title {
                font-size: 1.5rem;
            }

            .badges-container {
                justify-content: center;
            }
        }
    </style>
{% endblock %}

